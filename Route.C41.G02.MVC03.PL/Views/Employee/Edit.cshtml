@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<form asp-action="Edit" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

<div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age"/>
        <span  class="text-danger" asp-validation-for="Age"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input class="form-control" asp-for="HiringDate" />
        <span class="text-danger" asp-validation-for="HiringDate"></span>
    </div>
    <div class="form-group">
        <label class="form-check-input" asp-for="IsActive"></label>
        <input class="col-form-label" asp-for="IsActive" />
    </div>

    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a class="btn btn-light" asp-controller="Employee" asp-action="Index">Cancel</a>
</form>
