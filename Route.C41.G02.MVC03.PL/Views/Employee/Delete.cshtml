@model Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Are You Sure To Delete This Employee</h1>

<form asp-action="Delete" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input class="form-control" asp-for="HiringDate" readonly />
    </div>
    <div class="form-group">
        <label class="form-check-input" asp-for="IsActive"></label>
        <input class="col-form-label" asp-for="IsActive" readonly />
    </div>

    <input type="submit" value="Delete" class="btn btn-primary" /> |
    <a class="btn btn-light" asp-controller="Employee" asp-action="Index">Cancel</a>
</form>

