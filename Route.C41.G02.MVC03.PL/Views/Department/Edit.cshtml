@model Department
@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<form asp-action="Edit" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateofCreation"></label>
        <input class="form-control" asp-for="DateofCreation" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a class="btn btn-light" asp-controller="Department" asp-action="Index">Cancel</a>
</form>
