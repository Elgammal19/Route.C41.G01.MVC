@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<br />
<br />

<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code"/>
        <span  class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateofCreation"></label>
        <input class="form-control" asp-for="DateofCreation" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary"/> | 
    <a class="btn btn-light" asp-controller="Department" asp-action="Index">Back To List</a>
</form>
